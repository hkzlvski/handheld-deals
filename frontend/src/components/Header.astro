---
const navLinks = [
  { href: '/browse', label: 'Browse Games' },
  { href: '/deals', label: 'Top Deals' },
  { href: '/collections', label: 'Collections' },
  { href: '/events', label: 'Sales Events' },
];
---

<header class="sticky top-0 z-50 bg-zinc-950/80 backdrop-blur-lg border-b border-zinc-800">
  <nav class="container mx-auto px-4">
    <div class="flex items-center justify-between h-16">
      <!-- Logo -->
      <a href="/" class="flex items-center gap-2 hover:opacity-80 transition-opacity">
        <span class="text-3xl">ðŸŽ®</span>
        <span class="font-bold text-xl text-zinc-50">Handheld Deals</span>
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center gap-6">
        {navLinks.map(link => (
          <a 
            href={link.href}
            class="text-zinc-400 hover:text-zinc-100 transition-colors font-medium"
          >
            {link.label}
          </a>
        ))}
      </div>

      <!-- Mobile Menu Button -->
      <button 
        id="mobile-menu-button"
        class="md:hidden p-2 text-zinc-400 hover:text-zinc-100 transition-colors"
        aria-label="Toggle menu"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>
  </nav>

  <!-- Mobile Menu -->
  <div 
    id="mobile-menu"
    class="hidden md:hidden border-t border-zinc-800 bg-zinc-900"
  >
    <div class="container mx-auto px-4 py-4 space-y-2">
      {navLinks.map(link => (
        <a 
          href={link.href}
          class="block px-4 py-2 text-zinc-400 hover:text-zinc-100 hover:bg-zinc-800 rounded-lg transition-colors"
        >
          {link.label}
        </a>
      ))}
    </div>
  </div>
</header>

<script>
  // Mobile menu toggle
  const button = document.getElementById('mobile-menu-button');
  const menu = document.getElementById('mobile-menu');

  button?.addEventListener('click', () => {
    menu?.classList.toggle('hidden');
  });

  // Close menu when clicking a link
  const links = menu?.querySelectorAll('a');
  links?.forEach(link => {
    link.addEventListener('click', () => {
      menu?.classList.add('hidden');
    });
  });
</script>