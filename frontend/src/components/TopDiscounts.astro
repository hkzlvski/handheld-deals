---
import Badge from "./Badge.astro";
import ExpirationBadge from "./ExpirationBadge.astro";
import { getDeviceBattery, getDeviceStatus } from "../lib/api";
import { isDealExpired } from "../utils/time";

interface Props {
  deals: any[];
  device?: string;
}

const { deals, device = "steam_deck" } = Astro.props;

const deviceTitles: Record<string, string> = {
  all: "ðŸ’° LEGENDARY LOOT",
  steam_deck: "ðŸ’° LEGENDARY LOOT",
  rog_ally: "ðŸ’° EPIC SAVINGS",
  legion_go: "ðŸ’° TREASURE TROVE",
};

const title = deviceTitles[device] || deviceTitles.all;

const deviceDescriptions: Record<string, string> = {
  all: "Biggest discounts Â· 50%+ off",
  steam_deck: "Massive discounts on Steam Deck compatible games",
  rog_ally: "Huge savings on ROG Ally verified titles",
  legion_go: "Best deals for Legion Go gaming",
};

const description = deviceDescriptions[device] || deviceDescriptions.all;
---

<section class="py-16 bg-zinc-900/30 opacity-95">
  <div class="container mx-auto px-4">
    <div class="flex items-end justify-between mb-8">
      <div>
        <h2 class="text-2xl md:text-3xl font-bold text-white mb-2">
          {title}
        </h2>
        <p class="text-sm text-zinc-500">
          {description}
        </p>
      </div>
      <a
        href={`/browse?filter=top-discounts&device=${device}`}
        class="hidden md:block text-sm text-blue-400 hover:text-blue-300 font-medium
      transition-colors"
      >
        View All â†’
      </a>
    </div>

    <div
      class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 2xl:grid-cols-6 gap-4 md:gap-6"
    >
      {
        deals
          .filter((deal) => !isDealExpired(deal.expiry_date))
          .slice(0, 12)
          .map((deal) => {
            const game = deal.game_id;
            if (!game) return null;

            const battery = getDeviceBattery(
              game,
              device as "steam_deck" | "rog_ally" | "legion_go",
            );
            const status = getDeviceStatus(
              game,
              device as "steam_deck" | "rog_ally" | "legion_go",
            );

            return (
              <a
                href={`/game/${game.slug}`}
                class="group bg-zinc-900 rounded-lg overflow-hidden border border-zinc-800 hover:border-zinc-700 transition-all hover:scale-[1.02]"
              >
                <div class="aspect-[3/4] bg-zinc-800 relative overflow-hidden">
                  {game.cover_image_url ? (
                    <img
                      src={game.cover_image_url}
                      alt={game.title}
                      class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                    />
                  ) : (
                    <div class="w-full h-full flex items-center justify-center text-zinc-600">
                      ðŸŽ®
                    </div>
                  )}

                  <div class="absolute top-2 left-2">
                    <Badge variant="discount" size="sm">
                      -{deal.discount_percent}%
                    </Badge>
                  </div>

                  {deal.is_historical_low && (
                    <div class="absolute top-2 right-2">
                      <Badge variant="historical_low" size="xs" icon="ðŸ”¥">
                        LOWEST
                      </Badge>
                    </div>
                  )}

                  {status && (
                    <div class="absolute bottom-2 right-2">
                      <Badge
                        variant={
                          status === "excellent"
                            ? "excellent"
                            : status === "playable"
                              ? "playable"
                              : "untested"
                        }
                        size="xs"
                        responsive
                      />
                    </div>
                  )}
                </div>

                <div class="p-3 space-y-2">
                  {deal.expiry_date && (
                    <div class="mb-2">
                      <ExpirationBadge
                        expiryDate={deal.expiry_date}
                        size="sm"
                      />
                    </div>
                  )}

                  <h3 class="font-semibold text-white text-sm line-clamp-2 group-hover:text-blue-400 transition-colors">
                    {game.title}
                  </h3>

                  <div class="flex items-baseline gap-2">
                    <span class="text-lg font-bold text-green-400">
                      ${Number(deal.price).toFixed(2)}
                    </span>
                    {Number(deal.normal_price) > Number(deal.price) && (
                      <span class="text-xs text-zinc-500 line-through">
                        ${Number(deal.normal_price).toFixed(2)}
                      </span>
                    )}
                  </div>

                  <div class="text-xs font-semibold text-orange-400">
                    Save $
                    {(Number(deal.normal_price) - Number(deal.price)).toFixed(
                      2,
                    )}
                  </div>

                  <div class="text-xs text-zinc-500 capitalize">
                    {deal.store}
                  </div>
                </div>
              </a>
            );
          })
      }
    </div>

    <div class="md:hidden mt-6">
      <a
        href={`/browse?filter=top-discounts&device=${device}`}
        class="block w-full py-3 bg-zinc-800 hover:bg-zinc-700 rounded-lg text-white text-center
    font-semibold transition-colors"
      >
        View All Discounts â†’
      </a>
    </div>
  </div>
</section>
