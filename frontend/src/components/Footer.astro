const currentYear = new Date().getFullYear();
---

<footer class="bg-zinc-950 border-t border-zinc-800 mt-auto">
  <div class="container mx-auto px-4 py-12">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
      <!-- About Section -->
      <div class="space-y-3">
        <h3 class="font-bold text-zinc-50 text-lg">Handheld Deals</h3>
        <p class="text-sm text-zinc-400">
          Find the best game deals for Steam Deck, ROG Ally, and handheld gaming PCs with verified compatibility.
        </p>
      </div>

      <!-- Navigation -->
      <div class="space-y-3">
        <h4 class="font-semibold text-zinc-50">Browse</h4>
        <ul class="space-y-2 text-sm">
          <li><a href="/browse" class="text-zinc-400 hover:text-zinc-100 transition-colors">All Games</a></li>
          <li><a href="/deals" class="text-zinc-400 hover:text-zinc-100 transition-colors">Top Deals</a></li>
          <li><a href="/collections" class="text-zinc-400 hover:text-zinc-100 transition-colors">Collections</a></li>
          <li><a href="/events" class="text-zinc-400 hover:text-zinc-100 transition-colors">Sales Events</a></li>
        </ul>
      </div>

      <!-- Resources -->
      <div class="space-y-3">
        <h4 class="font-semibold text-zinc-50">Resources</h4>
        <ul class="space-y-2 text-sm">
          <li><a href="/about" class="text-zinc-400 hover:text-zinc-100 transition-colors">About Us</a></li>
          <li><a href="/faq" class="text-zinc-400 hover:text-zinc-100 transition-colors">FAQ</a></li>
          <li><a href="/contact" class="text-zinc-400 hover:text-zinc-100 transition-colors">Contact</a></li>
          <li><a href="/privacy" class="text-zinc-400 hover:text-zinc-100 transition-colors">Privacy Policy</a></li>
        </ul>
      </div>

      <!-- Newsletter -->
      <div class="space-y-3">
        <h4 class="font-semibold text-zinc-50">Stay Updated</h4>
        <p class="text-sm text-zinc-400">
          Get notified about the best deals for your handheld.
        </p>
        <form class="space-y-2">
          <input 
            type="email" 
            placeholder="your@email.com"
            class="w-full px-3 py-2 bg-zinc-900 border border-zinc-800 rounded-lg text-sm text-zinc-100 placeholder-zinc-500 focus:outline-none focus:border-blue-600"
          />
          <button type="submit" class="w-full btn btn-primary text-sm">
            Subscribe
          </button>
        </form>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="mt-12 pt-8 border-t border-zinc-800">
      <div class="flex flex-col md:flex-row justify-between items-center gap-4">
        <p class="text-sm text-zinc-500">
